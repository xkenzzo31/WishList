<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucas.wishlist.activity.HomeActivity$PlaceholderFragment">
    <ListView
        android:id="@+id/list_wishs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/add_wish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/dark_red"
            app:fab_colorPressed="@color/very_dark_red"
            android:layout_alignBottom="@id/list_wishs"
            android:layout_alignRight="@id/list_wishs"
            />

</RelativeLayout>