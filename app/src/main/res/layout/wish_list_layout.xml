<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/wish_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wish_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wish_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:id="@+id/go_product_buy_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="AchetÃ©"
            android:background="@drawable/shape_custom_button_red"
            android:layout_weight="0.5"/>
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/product_is_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Je les !"
            android:background="@drawable/shape_custom_button_grey"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>