<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainActivity"/>
    <style name="MainActivity.View">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="MainActivity.Image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="MainActivity.Edit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="MainActivity.Layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MainActivity.Layout.ButtonRed">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/shape_custom_button_red</item>
    </style>
    <style name="MainActivity.Layout.ButtonBlack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_custom_button_grey</item>
    </style>
    <style name="Home_Activity"/>
    <style name="Home_Activity.AppBarLaout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:theme">@style/AppBarOverlay</item>
    </style>
    <style name="Home_Activity.ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="Tab_Home_Activity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ViewPager_Home_Activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Tab_Home_Activity.FloatActionButton">
        <item name="android:layout_gravity">end|bottom</item>
    </style>


</resources>
